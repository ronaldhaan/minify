<mah:MetroWindow x:Class="Minify.WPF.View.Overview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minify.WPF.View"
        mc:Ignorable="d"
        Title="Overview" Initialized="Window_Initialized"  Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="9*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <StackPanel Name="MessagePanel" Grid.Row="1" Grid.Column="2" Visibility="Hidden">
            <TextBox x:Name="Chat" KeyDown="Chat_KeyDown" />
            <ScrollViewer ScrollChanged="ScrollViewer_ScrollChanged" VerticalScrollBarVisibility="auto" x:Name="ScrollViewer" Height="500" >
                <StackPanel Name="scrollviewMessages">
                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Background="White">
            <TextBox Text="Search..." TextChanged="SearchBox_TextChanged" MouseEnter="Search_MouseEnter" MaxLength="30" x:Name="Search" Margin="5" Background="White" Width="160" Height="30" HorizontalAlignment="Left" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="0" >
            <!--placeholder for buttons-->
            <Button Background="#FF821BB2" Foreground="White" Height="50" Click="Btn_home">Home</Button>
            <Button Background="#FF821BB2" Foreground="White" Height="50" Click="Btn_songs">Songs</Button>
            <Button Background="#FF821BB2" Foreground="White" Height="50" Click="Btn_Add_Hitlist">Add Hitlist</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" >
            <StackPanel Height="200">
                <ScrollViewer VerticalScrollBarVisibility="auto" Height="200">
                    <ListView Name="HitlistMenu"  HorizontalAlignment="Stretch"  SelectionChanged="HitlistMenu_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Hitlists" DisplayMemberBinding="{Binding Title}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Height="200" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="auto" Height="200">
                    <ListView Name="streamrooms"  HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectionChanged="Streamroom_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Streamrooms" DisplayMemberBinding="{Binding Hitlist.Title}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Background="White" >
            <!--placeholder for contentframe-->
            <Frame Name="contentFrame" NavigationUIVisibility="Hidden">
            </Frame>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Background="White" />


        <StackPanel Grid.Row="2" Grid.Column="0" >
            <!--placeholder for displaying songs and artist-->
            <Label Style="{DynamicResource MahApps.Styles.Label}" x:Name="lbl_Song_Name" Margin="10" FontSize="24" />
            <Label Style="{DynamicResource MahApps.Styles.Label}" x:Name="lbl_Artist" Margin="10" FontSize="24" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Background="White">
            <!--placeholder for logout-->
            <Label Style="{DynamicResource MahApps.Styles.Label}" x:Name="label_Username" HorizontalContentAlignment="Center">Some Username</Label>
            <Button Click="Btn_Logout">Logout</Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" >
            <StackPanel >
                <MediaElement x:Name="mediaplayer" UnloadedBehavior="Manual" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >

                <Button Name="btn_Back"
                        Background="#FF821BB2" 
                        Foreground="White"
                        Width="50"
                        Height="50"
                        Style="{DynamicResource MahApps.Styles.Button.Circle}"
                        Content="Prev" 
                        Padding="5, 5, 5, 5"
                        MouseDown="OnMouseDownBack"/>

                <Button Name="btn_Play"
                        Background="#FF821BB2" 
                        Foreground="White"
                        Width="50"
                        Height="50" 
                        Style="{DynamicResource MahApps.Styles.Button.Circle}" 
                        Content="Play" 
                        Padding="5, 5, 5, 5"
                        MouseDown="OnMouseDownPlay"/>


                <Button Name="btn_Pause"
                        Background="#FF821BB2" 
                        Foreground="White"
                        Visibility="Collapsed"
                        Width="50"
                        Height="50" 
                        Style="{DynamicResource MahApps.Styles.Button.Circle}" 
                        Content="Play" 
                        Padding="5, 5, 5, 5"
                        MouseDown="OnMouseDownPlay"/>

                <Button Name="btn_Next"
                        Background="#FF821BB2" 
                        Foreground="White"
                        Width="50"
                        Height="50" 
                        Style="{DynamicResource MahApps.Styles.Button.Circle}" 
                        Content="Next" 
                        Padding="5, 5, 5, 5"
                        MouseDown="OnMouseDownNext"/>


                <!--<Image Name="btn_Back" Source="/ImageResources\back.png" MouseDown="OnMouseDownBack" Height="50" Width="50" Margin="5, 0 , 5, 0" />
                <Image Name="btn_Play" Source="/ImageResources\play.png" MouseDown="OnMouseDownPlay" Height="50" Width="50" Visibility="Visible" />
               
                <Image Name="btn_Pause" Source="/ImageResources\pause.png" MouseDown="OnMouseDownPause" Height="50" Width="50" Visibility="Collapsed" Margin="5, 0 , 5, 0" />
                <Image Name="btn_Next" Source="/ImageResources\next.png" MouseDown="OnMouseDownNext" Height="50" Width="50" Margin="5, 0 , 5, 0" />
                -->
                </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <Label Name="lbl_Current_Time" VerticalAlignment="Center">00:00</Label>
                <ProgressBar x:Name="Song_Progressbar" Height="5" Width="400" Minimum="0" Maximum="100" Value="0" Foreground="#FF821BB2" />
                <Label Name="lbl_Song_Duration" VerticalAlignment="Center">00:00</Label>
            </StackPanel>
            <StackPanel >
                <!--right side of mediaplayer-->
            </StackPanel>
        </StackPanel>
    </Grid>
</mah:MetroWindow>