<UserControl x:Class="Minify.WPF.Controls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minify.WPF.Controls"
             mc:Ignorable="d" >
    <Grid>
        <TextBox x:Name="tbxSearchSongs" 
                Style="{DynamicResource MahApps.Styles.TextBox.Search}"
                Text="{DynamicResource Translation.Song.Search}" 
                GotFocus="TbxSearchSongs_GotFocus"
                LostFocus="TbxSearchSongs_LostFocus"
                TextChanged="TbxSearchSongs_TextChanged" 
                MaxLength="30" 
                Margin="5"  
                Width="160" Height="30" 
                HorizontalAlignment="Left" />
    </Grid>
</UserControl>
